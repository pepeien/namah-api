{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@models": ["src/models/index.ts"],
      "@routes": ["src/routes/index.ts"],
      "@services": ["src/services/index.ts"],
      "@typing": ["src/types/index.ts"]
    },
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}